{
    "name": "typescript-template",
    "version": "1.0.0",
    "description": "A simple TypeScript template for starting new Typescript projects with",
    "main": "dist/index.js",
    "scripts": {
        "start": "node dist/index.js",
        "test": "jest",
        "lint": "eslint .",
        "lint:fix": "eslint --fix .",
        "pretsc": "rimraf -g ./dist/*",
        "tsc": "tsc -p tsconfig.build.json",
        "docker:build": "docker build --pull --no-cache -t ts-template ."
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/W-E-Robinson/TypeScript-Template.git"
    },
    "author": "Will Robinson (github: W-E-Robinson)",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/W-E-Robinson/TypeScript-Template/issues"
    },
    "homepage": "https://github.com/W-E-Robinson/TypeScript-Template#readme",
    "devDependencies": {
        "@types/jest": "^29.5.12",
        "@typescript-eslint/eslint-plugin": "^7.6.0",
        "@typescript-eslint/parser": "^7.6.0",
        "eslint": "^8.57.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-airbnb-typescript": "^18.0.0",
        "eslint-config-standard": "^17.1.0",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-jest": "^28.8.0",
        "eslint-plugin-n": "^16.6.2",
        "eslint-plugin-promise": "^6.1.1",
        "jest": "^29.7.0",
        "ts-jest": "^29.1.2",
        "ts-node": "^10.9.2",
        "typescript": "^5.4.5",
        "rimraf": "^6.0.1"
    },
    "jest": {
        "preset": "ts-jest",
        "testMatch": [
            "**/?(*.)+(spec|test).ts"
        ]
    }
}
